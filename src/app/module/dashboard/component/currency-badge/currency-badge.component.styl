logo_size = 4em;

:host {
  display: flex;
  flex-direction: row;
  box-shadow: 0 0 0.5em #00000020;
  border-radius: 0.5em;
  // background-color: #00000010;
  padding: 0.5em;
}

header {
  position: relative;
  display: flex;
  flex-direction: row;
}

.logo {
  display: flex;
  margin: 0.5em;
  width: logo_size;
  height: logo_size;
  align-items: center;
  justify-content: center;
  background-size: contain;
}

.arrow {
  position: absolute;
  left: 0;
  bottom: 0;

  &-down {
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 20px solid #f00;
  }

  &-up {
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 20px solid #0f0;
  }
}

.synopsis {
  display: flex;
  margin: 0.5em;
  flex-direction: column;
  align-items: flex-start;
}